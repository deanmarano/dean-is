<div class="wrapper">
  <header>
    <h1>Audio Analyzer</h1>
  </header>

  {{#if source}}
    {{sinewave-visualizer source=source audioContext=audioContext}}
    {{histogram-visualizer source=source audioContext=audioContext}}
    {{timeline-visualizer source=source audioContext=audioContext}}
  {{/if}}
  <button {{action 'togglePlayback'}}>
    {{#if source.playing}}
      Pause
    {{else}}
      Play
    {{/if}}
  </button>
</div>
